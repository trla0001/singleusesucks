<style>
  .delay {
    animation-delay: 1s;
    animation-duration: 2s;
  }
  .delay-1 {
    animation-delay: 2s;
    animation-duration: 2s;
  }
  .delay-2 {
    animation-delay: 2.5s;
    animation-duration: 2s;
  }
  .delay-3 {
    animation-delay: 3s;
    animation-duration: 2s;
  }
</style>

<script>
  import { animate, stagger, inView, scroll, timeline, type OnScroll, type ScrollOptions, type ScrollInfo, ScrollOffset } from "motion";
