      <img src="/graph_billede.webp" alt="" />
    </div>
  </section>

  <input
    id="slider"
    type="range"
    min="0"
    max="100"
    value="50"
    class="z-40 absolute bottom-0 w-full -translate-y-1/2 opacity-70 transition-opacity duration-200 hover:opacity-100"
    style="cursor: pointer; appearance: none; height: 30px; background-color: rgba(0, 9, 26, 1);"
    oninput="document.getElementById('divisor').style.width = this.value + '%';"
  />
</div>
<div class="slide_text absolute md:bottom-16 md:left-160 w-full flex items-center justify-between px-72 -mb-10">
